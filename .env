# Environment Configuration for SecureDocs
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=mysql+pymysql://admin:password@db:3306/securedocs

# JWT Configuration
JWT_SECRET=your_secret_key

# Storage Configuration
# Options: database, filesystem, s3
STORAGE_MODE=database

# Filesystem Storage (if STORAGE_MODE=filesystem)
STORAGE_PATH=./file_storage

# Logging
LOG_LEVEL=info
